@model IEnumerable<WebApplication.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("إضافة طالب ",  < a href = "~/AddStudents/Create" >  , null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StuderntName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student_Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student_age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student_address)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StuderntName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student_Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student_age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student_address)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
     }
</table>
